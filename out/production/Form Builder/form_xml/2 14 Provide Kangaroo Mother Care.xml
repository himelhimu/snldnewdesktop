<?xml version="1.0" encoding="utf-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>2.14 Provide Kangaroo Mother Care</h:title>
    <model>
      <instance>
        <session_14_chap_2_en id="fourteen_session_second_chapter_en">
          <formhub>
            <uuid/>
          </formhub>
          <chapter1/>
          <s14_q1/>
          <cal1/>
          <s14_q2/>
          <cal2/>
          <s14_q3/>
          <cal3/>
          <correctAns/>
          <cor1/>
          <cor2/>
          <cor3/>
          <cor0/>
          <meta>
            <instanceID/>
          </meta>
        </session_14_chap_2_en>
      </instance>
      <bind nodeset="/session_14_chap_2_en/chapter1" type="select1"/>
      <bind constraint=".='t'" jr:constraintMsg="উত্তর ভুল" nodeset="/session_14_chap_2_en/s14_q1" required="true()" type="select1"/>
      <bind calculate="if( /session_14_chap_2_en/s14_q1  = 't',1,0)" nodeset="/session_14_chap_2_en/cal1" type="string"/>
      <bind constraint=".='t'" jr:constraintMsg="উত্তর ভুল" nodeset="/session_14_chap_2_en/s14_q2" required="true()" type="select1"/>
      <bind calculate="if( /session_14_chap_2_en/s14_q2  = 't',1,0)" nodeset="/session_14_chap_2_en/cal2" type="string"/>
      <bind constraint=".='t'" jr:constraintMsg="উত্তর ভুল" nodeset="/session_14_chap_2_en/s14_q3" required="true()" type="select1"/>
      <bind calculate="if( /session_14_chap_2_en/s14_q3  = 't',1,0)" nodeset="/session_14_chap_2_en/cal3" type="string"/>
      <bind calculate=" /session_14_chap_2_en/cal1 + /session_14_chap_2_en/cal2 + /session_14_chap_2_en/cal3 " nodeset="/session_14_chap_2_en/correctAns" type="string"/>
      <bind nodeset="/session_14_chap_2_en/cor1" readonly="true()" relevant=" /session_14_chap_2_en/correctAns  = 1" type="string"/>
      <bind nodeset="/session_14_chap_2_en/cor2" readonly="true()" relevant=" /session_14_chap_2_en/correctAns  = 2" type="string"/>
      <bind nodeset="/session_14_chap_2_en/cor3" readonly="true()" relevant=" /session_14_chap_2_en/correctAns  = 3" type="string"/>
      <bind nodeset="/session_14_chap_2_en/cor0" readonly="true()" relevant=" /session_14_chap_2_en/correctAns  = 0" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/session_14_chap_2_en/meta/instanceID" readonly="true()" type="string"/>
      <bind calculate="'dbf912fde89a4fb4886b6709ff50c61c'" nodeset="/session_14_chap_2_en/formhub/uuid" type="string"/>
    </model>
  </h:head>
  <h:body>
    <select1 appearance="html" ref="/session_14_chap_2_en/chapter1">
      <label>Chapter 2</label>
      <item>
        <label>session_fourteen.html</label>
        <value>h</value>
      </item>
    </select1>
    <select1 appearance="button" ref="/session_14_chap_2_en/s14_q1">
      <label>1. Name the Component(s) of KMC?</label>
      <item>
        <label>Skin-to-skin (STS) contact, exclusive breastfeeding</label>
        <value>ff</value>
      </item>
      <item>
        <label>Early discharge and regular follow-up</label>
        <value>f</value>
      </item>
      <item>
        <label>All of above</label>
        <value>t</value>
      </item>
    </select1>
    <select1 appearance="button" ref="/session_14_chap_2_en/s14_q2">
      <label>2. How long can KMC be given?</label>
      <item>
        <label>12 hours a day</label>
        <value>f</value>
      </item>
      <item>
        <label>15 hours a day</label>
        <value>ff</value>
      </item>
      <item>
        <label>20 + hours a day</label>
        <value>t</value>
      </item>
    </select1>
    <select1 appearance="button" ref="/session_14_chap_2_en/s14_q3">
      <label>3. When should we discontinue KMC?</label>
      <item>
        <label>Baby's gestation reaches term (40 weeks corrected gestational age) or the weight is 2500 gm</label>
        <value>f</value>
      </item>
      <item>
        <label>Baby  starts wriggling to show that s/he is uncomfortable</label>
        <value>ff</value>
      </item>
      <item>
        <label>All of above</label>
        <value>t</value>
      </item>
    </select1>
    <input ref="/session_14_chap_2_en/cor1">
      <label>Your Score 
<output value=" /session_14_chap_2_en/correctAns "/>/3</label>
    </input>
    <input ref="/session_14_chap_2_en/cor2">
      <label>Your Score 
<output value=" /session_14_chap_2_en/correctAns "/>/3</label>
    </input>
    <input ref="/session_14_chap_2_en/cor3">
      <label>Your Score 
<output value=" /session_14_chap_2_en/correctAns "/>/3</label>
    </input>
    <input ref="/session_14_chap_2_en/cor0">
      <label>Your Score 
<output value=" /session_14_chap_2_en/correctAns "/>/3</label>
    </input>
  </h:body>
</h:html>
