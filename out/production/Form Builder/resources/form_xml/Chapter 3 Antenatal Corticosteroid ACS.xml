<?xml version="1.0" encoding="utf-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Chapter 3- Antenatal Corticosteroid (ACS)</h:title>
    <model>
      <instance>
        <chapter_3_exam_en id="chapter_3_exam_en">
          <formhub>
            <uuid/>
          </formhub>
          <c3_q1/>
          <c1/>
          <c3_q2/>
          <c2/>
          <c3_q3/>
          <c3/>
          <c3_q4/>
          <c4/>
          <c3_q5/>
          <c5/>
          <c3_q6/>
          <c6/>
          <c3_q7/>
          <c7/>
          <c3_q8/>
          <c8/>
          <c3_q9/>
          <c9/>
          <c3_q10/>
          <c10/>
          <total/>
          <meta>
            <instanceID/>
          </meta>
        </chapter_3_exam_en>
      </instance>
      <bind constraint=".='1 2 3 4'" jr:constraintMsg="উত্তর ভুল" nodeset="/chapter_3_exam_en/c3_q1" required="true()" type="select"/>
      <bind calculate="if( /chapter_3_exam_en/c3_q1  = '1 2 3 4',1,0)" nodeset="/chapter_3_exam_en/c1" readonly="true()" type="string"/>
      <bind constraint=".='2'" jr:constraintMsg="উত্তর ভুল" nodeset="/chapter_3_exam_en/c3_q2" required="true()" type="select1"/>
      <bind calculate="if( /chapter_3_exam_en/c3_q2  = '2',1,0)" nodeset="/chapter_3_exam_en/c2" readonly="true()" type="string"/>
      <bind constraint=".='1 2 3'" jr:constraintMsg="উত্তর ভুল" nodeset="/chapter_3_exam_en/c3_q3" required="true()" type="select"/>
      <bind calculate="if( /chapter_3_exam_en/c3_q3  = '1 2 3',1,0)" nodeset="/chapter_3_exam_en/c3" readonly="true()" type="string"/>
      <bind constraint=".='1'" jr:constraintMsg="উত্তর ভুল" nodeset="/chapter_3_exam_en/c3_q4" required="true()" type="select1"/>
      <bind calculate="if( /chapter_3_exam_en/c3_q4  = '1',1,0)" nodeset="/chapter_3_exam_en/c4" readonly="true()" type="string"/>
      <bind constraint=".='3'" jr:constraintMsg="উত্তর ভুল" nodeset="/chapter_3_exam_en/c3_q5" required="true()" type="select1"/>
      <bind calculate="if( /chapter_3_exam_en/c3_q5  = '3',1,0)" nodeset="/chapter_3_exam_en/c5" readonly="true()" type="string"/>
      <bind constraint=".='3'" jr:constraintMsg="উত্তর ভুল" nodeset="/chapter_3_exam_en/c3_q6" required="true()" type="select1"/>
      <bind calculate="if( /chapter_3_exam_en/c3_q6  = '3',1,0)" nodeset="/chapter_3_exam_en/c6" readonly="true()" type="string"/>
      <bind constraint=".='1 2 3'" jr:constraintMsg="উত্তর ভুল" nodeset="/chapter_3_exam_en/c3_q7" required="true()" type="select"/>
      <bind calculate="if( /chapter_3_exam_en/c3_q7  = '1 2 3',1,0)" nodeset="/chapter_3_exam_en/c7" readonly="true()" type="string"/>
      <bind constraint=".='1 2'" jr:constraintMsg="উত্তর ভুল" nodeset="/chapter_3_exam_en/c3_q8" required="true()" type="select"/>
      <bind calculate="if( /chapter_3_exam_en/c3_q8  = '1 2',1,0)" nodeset="/chapter_3_exam_en/c8" readonly="true()" type="string"/>
      <bind constraint=".='4'" jr:constraintMsg="উত্তর ভুল" nodeset="/chapter_3_exam_en/c3_q9" required="true()" type="select1"/>
      <bind calculate="if( /chapter_3_exam_en/c3_q9  = '4',1,0)" nodeset="/chapter_3_exam_en/c9" readonly="true()" type="string"/>
      <bind constraint=".='3'" jr:constraintMsg="উত্তর ভুল" nodeset="/chapter_3_exam_en/c3_q10" required="true()" type="select1"/>
      <bind calculate="if( /chapter_3_exam_en/c3_q10  = '3',1,0)" nodeset="/chapter_3_exam_en/c10" readonly="true()" type="string"/>
      <bind calculate=" /chapter_3_exam_en/c1  +  /chapter_3_exam_en/c2  +  /chapter_3_exam_en/c3  +  /chapter_3_exam_en/c4  +  /chapter_3_exam_en/c5  +  /chapter_3_exam_en/c6  +  /chapter_3_exam_en/c7  +  /chapter_3_exam_en/c8  +  /chapter_3_exam_en/c9  +  /chapter_3_exam_en/c10 " nodeset="/chapter_3_exam_en/total" readonly="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/chapter_3_exam_en/meta/instanceID" readonly="true()" type="string"/>
      <bind calculate="'d1513d34c9ff46dc9c9b61b413d6e791'" nodeset="/chapter_3_exam_en/formhub/uuid" type="string"/>
    </model>
  </h:head>
  <h:body>
    <select appearance="button" ref="/chapter_3_exam_en/c3_q1">
      <label>1. What are the indications of administration of ACS?</label>
      <item>
        <label>Preterm labor</label>
        <value>1</value>
      </item>
      <item>
        <label>pPROM</label>
        <value>2</value>
      </item>
      <item>
        <label>Severe pre-eclempsia/ eclempsia</label>
        <value>3</value>
      </item>
      <item>
        <label>APH</label>
        <value>4</value>
      </item>
    </select>
    <select1 appearance="button" ref="/chapter_3_exam_en/c3_q2">
      <label>2. Which is the suitable time for administration of ACS?</label>
      <item>
        <label>22-34 weeks of gestation</label>
        <value>1</value>
      </item>
      <item>
        <label>24-34 weeks of gestation</label>
        <value>2</value>
      </item>
      <item>
        <label>26-34 weeks of gestation</label>
        <value>3</value>
      </item>
    </select1>
    <select appearance="button" ref="/chapter_3_exam_en/c3_q3">
      <label>3. What are the criteria of a facility to administer ACS?</label>
      <item>
        <label>Ability of assessment of Gestational Age and risk of imminent preterm birth</label>
        <value>1</value>
      </item>
      <item>
        <label>Ability to provide preterm newborn care</label>
        <value>2</value>
      </item>
      <item>
        <label>Ability to provide timely and appropriate identification and treatment of maternal infection</label>
        <value>3</value>
      </item>
    </select>
    <select1 appearance="button" ref="/chapter_3_exam_en/c3_q4">
      <label>4. What is the dose of ACS?</label>
      <item>
        <label>12mg Dexamethasone – 24 hourly for two days</label>
        <value>1</value>
      </item>
      <item>
        <label>10mg Dexamethasone – 24 hourly for two days</label>
        <value>2</value>
      </item>
      <item>
        <label>8mg Dexamethasone – 24 hourly for two days</label>
        <value>3</value>
      </item>
    </select1>
    <select1 appearance="button" ref="/chapter_3_exam_en/c3_q5">
      <label>5. Preterm premature rupture of membrane (pPROM) means:</label>
      <item>
        <label>When amniotic sac breaks prior to 32 weeks of gestation in the absence of labor</label>
        <value>1</value>
      </item>
      <item>
        <label>When amniotic sac breaks prior to 33 weeks of gestation in the absence of labor</label>
        <value>2</value>
      </item>
      <item>
        <label>When amniotic sac breaks prior to 34 weeks of gestation in the absence of labor</label>
        <value>3</value>
      </item>
    </select1>
    <select1 appearance="button" ref="/chapter_3_exam_en/c3_q6">
      <label>6. How do you diagnose pPROM by history?</label>
      <item>
        <label>Typical odor of amniotic fluid</label>
        <value>1</value>
      </item>
      <item>
        <label>Report of a sudden gush of fluid</label>
        <value>2</value>
      </item>
      <item>
        <label>Both of the above</label>
        <value>3</value>
      </item>
    </select1>
    <select appearance="button" ref="/chapter_3_exam_en/c3_q7">
      <label>7. What are the symptoms of eclempsia or severe pre-eclempsia during pregnancy?</label>
      <item>
        <label>Systolic BP &gt; 160 mmHg or diastolic BP&gt;110mmHg</label>
        <value>1</value>
      </item>
      <item>
        <label>Severe headaches or visual disturbances</label>
        <value>2</value>
      </item>
      <item>
        <label>Pulmonary Edema</label>
        <value>3</value>
      </item>
    </select>
    <select appearance="button" ref="/chapter_3_exam_en/c3_q8">
      <label>8. What are the signs and symptoms of Acute Partum Hemorrhage?</label>
      <item>
        <label>Vaginal bleeding in late pregnancy</label>
        <value>1</value>
      </item>
      <item>
        <label>Intermittent or Constant abdominal pain</label>
        <value>2</value>
      </item>
      <item>
        <label>None of the above</label>
        <value>3</value>
      </item>
    </select>
    <select1 appearance="button" ref="/chapter_3_exam_en/c3_q9">
      <label>9. Preterm Labor is:</label>
      <item>
        <label>Regular contraction of the uterus before 34 weeks pregnancy</label>
        <value>1</value>
      </item>
      <item>
        <label>4 or more uterine contractions in 20 minutes with cervical dilation &gt;2cm, effacement &gt;50%</label>
        <value>2</value>
      </item>
      <item>
        <label>Cramping, back ache or lower back pain</label>
        <value>3</value>
      </item>
      <item>
        <label>All of the above</label>
        <value>4</value>
      </item>
    </select1>
    <select1 appearance="button" ref="/chapter_3_exam_en/c3_q10">
      <label>10. Which equation will correctly estimate the EDD?</label>
      <item>
        <label>(LMP+ 9 months) - 7 days, EDD</label>
        <value>1</value>
      </item>
      <item>
        <label>(LMP+ 9 months) + 7 days, EDD</label>
        <value>2</value>
      </item>
      <item>
        <label>(LMP+ 3 months) + 7 days, EDD</label>
        <value>3</value>
      </item>
    </select1>
    <input ref="/chapter_3_exam_en/total">
      <label>Your Score</label>
    </input>
  </h:body>
</h:html>
