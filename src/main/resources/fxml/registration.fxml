<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<GridPane fx:controller="com.mpower.desktop.controller.RegistrationController"
          stylesheets="/css/registration.css" prefHeight="700" prefWidth="800"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="10" vgap="10">
    <fx:define>
        <ToggleGroup fx:id="profession_toggle_group"/>
    </fx:define>
    <Label GridPane.rowIndex="0" GridPane.columnSpan="3"  alignment="TOP_CENTER" fx:id="registration_title">Choose your Occupation</Label>
    <ToggleButton fx:id="button_doctor" GridPane.rowIndex="1" GridPane.columnIndex="0" toggleGroup="$profession_toggle_group" onMouseClicked="#onImageClicked">
        <graphic>
            <ImageView fx:id="doctor_reg" layoutX="29.0" layoutY="44.0"
                       fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="/img/doctor.png" backgroundLoading="true"/>
                </image>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton fx:id="button_nurse" GridPane.rowIndex="1" GridPane.columnIndex="1" toggleGroup="$profession_toggle_group" onMouseClicked="#onImageClicked">
        <graphic>
            <ImageView fx:id="nurse_reg"
                       layoutX="29.0" layoutY="44.0" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="/img/nurse.png" backgroundLoading="true"/>
                </image>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton  fx:id="button_fwd" GridPane.rowIndex="2" GridPane.columnIndex="0" toggleGroup="$profession_toggle_group" onMouseClicked="#onImageClicked">
        <graphic>
            <ImageView fx:id="fwd_reg"
                       layoutX="29.0" layoutY="44.0" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="/img/fwv.png" backgroundLoading="true"/>
                </image>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton fx:id="button_sacmo" GridPane.rowIndex="2" GridPane.columnIndex="1" toggleGroup="$profession_toggle_group" onMouseClicked="#onImageClicked">
        <graphic>
            <ImageView fx:id="sacmo_reg"
                       layoutX="29.0" layoutY="44.0" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="/img/sacmo.png" backgroundLoading="true"/>
                </image>
            </ImageView>
        </graphic>
    </ToggleButton>
    <Button  prefHeight="30.0" prefWidth="200.0"  alignment="CENTER" fx:id="button_reg" GridPane.rowIndex="3" GridPane.columnSpan="3" disable="true" onAction="#initRegistrationPage"
            text="Registration"/>
    <Label GridPane.rowIndex="4"   GridPane.columnSpan="3" alignment="CENTER">Already Registered?</Label>
    <Button GridPane.rowIndex="5" prefHeight="30.0" prefWidth="200.0" alignment="CENTER" fx:id="button_login" GridPane.columnSpan="3" onAction="#initLogin"
            text="Login"/>


</GridPane>