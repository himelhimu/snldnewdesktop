<?xml version="1.0" encoding="utf-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>2.20 Recognize Convulsion</h:title>
    <model>
      <instance>
        <session_20_chap_2_en id="twenty_session_second_chapter_en">
          <formhub>
            <uuid/>
          </formhub>
          <chapter1/>
          <s20_q1/>
          <cal1/>
          <s20_q2/>
          <cal2/>
          <s20_q3/>
          <cal3/>
          <correctAns/>
          <cor1/>
          <cor2/>
          <cor3/>
          <cor0/>
          <meta>
            <instanceID/>
          </meta>
        </session_20_chap_2_en>
      </instance>
      <bind nodeset="/session_20_chap_2_en/chapter1" type="select1"/>
      <bind constraint=".='t'" jr:constraintMsg="উত্তর ভুল" nodeset="/session_20_chap_2_en/s20_q1" required="true()" type="select1"/>
      <bind calculate="if( /session_20_chap_2_en/s20_q1  = 't',1,0)" nodeset="/session_20_chap_2_en/cal1" type="string"/>
      <bind constraint=".='t'" jr:constraintMsg="উত্তর ভুল" nodeset="/session_20_chap_2_en/s20_q2" required="true()" type="select1"/>
      <bind calculate="if( /session_20_chap_2_en/s20_q2  = 't',1,0)" nodeset="/session_20_chap_2_en/cal2" type="string"/>
      <bind constraint=".='t'" jr:constraintMsg="উত্তর ভুল" nodeset="/session_20_chap_2_en/s20_q3" required="true()" type="select1"/>
      <bind calculate="if( /session_20_chap_2_en/s20_q3  = 't',1,0)" nodeset="/session_20_chap_2_en/cal3" type="string"/>
      <bind calculate=" /session_20_chap_2_en/cal1 + /session_20_chap_2_en/cal2 + /session_20_chap_2_en/cal3 " nodeset="/session_20_chap_2_en/correctAns" type="string"/>
      <bind nodeset="/session_20_chap_2_en/cor1" readonly="true()" relevant=" /session_20_chap_2_en/correctAns  = 1" type="string"/>
      <bind nodeset="/session_20_chap_2_en/cor2" readonly="true()" relevant=" /session_20_chap_2_en/correctAns  = 2" type="string"/>
      <bind nodeset="/session_20_chap_2_en/cor3" readonly="true()" relevant=" /session_20_chap_2_en/correctAns  = 3" type="string"/>
      <bind nodeset="/session_20_chap_2_en/cor0" readonly="true()" relevant=" /session_20_chap_2_en/correctAns  = 0" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/session_20_chap_2_en/meta/instanceID" readonly="true()" type="string"/>
      <bind calculate="'695c7c2267154aeeb51c4bef3425b70d'" nodeset="/session_20_chap_2_en/formhub/uuid" type="string"/>
    </model>
  </h:head>
  <h:body>
    <select1 appearance="html" ref="/session_20_chap_2_en/chapter1">
      <label>Chapter 2</label>
      <item>
        <label>session_twenty.html</label>
        <value>h</value>
      </item>
    </select1>
    <select1 appearance="button" ref="/session_20_chap_2_en/s20_q1">
      <label>1. What are the common couses of newnatal convalsions?</label>
      <item>
        <label>Hypoglycaemia, Hypocalcaemia</label>
        <value>t</value>
      </item>
      <item>
        <label>Hypercalcaemia, Hypoglycaemia</label>
        <value>f</value>
      </item>
      <item>
        <label>Hyperglycaemia, Hypercalcaemia,</label>
        <value>ff</value>
      </item>
    </select1>
    <select1 appearance="button" ref="/session_20_chap_2_en/s20_q2">
      <label>2. What is the management of active convalsion?</label>
      <item>
        <label>Hospitalization, check air way, give oxygen (if needed</label>
        <value>ff</value>
      </item>
      <item>
        <label>Check air way, give oxygen (if needed), check blood glucose</label>
        <value>f</value>
      </item>
      <item>
        <label>Hospitalization, check air way, give oxygen (if needed), check blood glucose, give phenbarbital</label>
        <value>t</value>
      </item>
    </select1>
    <select1 appearance="button" ref="/session_20_chap_2_en/s20_q3">
      <label>3. What is the dose of glucose for management of hypoglycaemia?</label>
      <item>
        <label>2 ml/kg of 10% glucose</label>
        <value>t</value>
      </item>
      <item>
        <label>5 ml/kg of 10% glucose</label>
        <value>ff</value>
      </item>
      <item>
        <label>2 ml/kg of 5% glucose</label>
        <value>ff</value>
      </item>
    </select1>
    <input ref="/session_20_chap_2_en/cor1">
      <label>Your Score 
<output value=" /session_20_chap_2_en/correctAns "/>/3</label>
    </input>
    <input ref="/session_20_chap_2_en/cor2">
      <label>Your Score 
<output value=" /session_20_chap_2_en/correctAns "/>/3</label>
    </input>
    <input ref="/session_20_chap_2_en/cor3">
      <label>Your Score 
<output value=" /session_20_chap_2_en/correctAns "/>/3</label>
    </input>
    <input ref="/session_20_chap_2_en/cor0">
      <label>Your Score 
<output value=" /session_20_chap_2_en/correctAns "/>/3</label>
    </input>
  </h:body>
</h:html>
